
@{
    ViewBag.Title = "hotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <section class="carousel">
        <div id="carouselExampleFade" class="carousel slide carousel-fade">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/assets/img/banner/banner1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/assets/img/banner/banner2.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/assets/img/banner/banner3.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>
    <section>
        <div class="menu-fin">
            <div class="search-bar">
                <!-- Nơi khởi hành -->
                <div class="input-container">
                    <i class="fas fa-map-marker-alt"></i>
                    <input type="text" id="departure" placeholder="Nơi khởi hành" onclick="toggleCityList()" readonly>
                    <ul class="city-list" id="city-list">
                        <li onclick="selectCity('Hà Nội')">Hà Nội</li>
                        <li onclick="selectCity('TP. Hồ Chí Minh')">TP. Hồ Chí Minh</li>
                        <li onclick="selectCity('Đà Nẵng')">Đà Nẵng</li>
                        <li onclick="selectCity('Nha Trang')">Nha Trang</li>
                        <li onclick="selectCity('Phú Quốc')">Phú Quốc</li>
                    </ul>
                </div>

                <!-- Ngày đi -->
                <div class="input-container">
                    <i class="fas fa-calendar-alt"></i>
                    <input type="date" id="date-picker" placeholder="ngày đi">
                </div>

                <!-- Số lượng khách -->
                <div class="input-container">
                    <i class="fas fa-user-friends"></i>
                    <input type="text" id="guest-room-text" value="1 người lớn, 0 trẻ em, 1 phòng" readonly onclick="toggleGuestRoomPopup()">
                    <div class="guest-room-popup" id="guest-room-popup">
                        <div class="counter">
                            <span>Người lớn</span>
                            <button onclick="changeCount('adults', -1)">-</button>
                            <span id="adults-count">1</span>
                            <button onclick="changeCount('adults', 1)">+</button>
                        </div>
                        <div class="counter">
                            <span>Trẻ em</span>
                            <button onclick="changeCount('children', -1)">-</button>
                            <span id="children-count">0</span>
                            <button onclick="changeCount('children', 1)">+</button>
                        </div>
                        <div class="counter">
                            <span>Phòng</span>
                            <button onclick="changeCount('rooms', -1)">-</button>
                            <span id="rooms-count">1</span>
                            <button onclick="changeCount('rooms', 1)">+</button>
                        </div>
                        <button class="apply-btn" onclick="applySelection()">Xong</button>
                    </div>
                </div>

                <!-- Nút tìm kiếm -->
                <button class="search-button"><i class="fas fa-search"></i></button>
            </div>
        </div>
    </section>

